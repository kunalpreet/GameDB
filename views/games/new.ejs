<% layout('/layouts/Boilerplate')  %> 
<div class="row">
    <h1 class="text-center">New Game</h1>
    <div class="col-6 offset-3">
        <form action="/games" method="POST" novalidate class="validated-form">
            <div  class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="game[title]" id="title" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div >
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="game[location]" id="location" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" name="game[image]" id="image" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Game Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="game[price]" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="game[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Game</button>   
            </div>
    
        </form>
        <a href="/games">All Games</a>
    </div>
</div>

